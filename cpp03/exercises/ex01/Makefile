# ***** Color Definition ***** #

RED = \033[91m
YELLOW = \033[33m
GREEN = \033[92m
RESET = \033[0m

# **************************** #

NAME = ScavTrap

# Source Files
SRCS     	= main.cpp ClapTrap.cpp ScavTrap.cpp

# Object Files
OBJS = $(SRCS:.cpp=.o)

# Compiler and Flags
CXX			= c++
CXXFLAGS	= -Wall -Wextra -Werror -std=c++98
RM			= rm -rf

# Targets
all:	$(NAME)

%.o: %.cpp
	@$(CXX) $(CXXFLAGS) -c $< -o $@

$(NAME):	$(OBJS)
	@echo "$(YELLOW) ðŸ› ï¸  waiting for compilation...$(RESET)"
	@$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)
	@echo "$(GREEN) ðŸ¤–  Compiled successful âœ´ï¸  $(NAME) âœ´ï¸$(RESET)"

# Clean
clean:
	@$(RM) $(OBJS)
	@echo "$(RED) ðŸ—‘ï¸  Deleted object files.$(RESET)"

fclean:	clean
	@$(RM) $(NAME)
	@find . -name "*.dSYM" -type d -exec $(RM) {} +
	@echo "$(RED) ðŸš½  Deleted â„ï¸  $(NAME) â„ï¸$(RESET)"

re: fclean all

# Debug & Memory leaks (iOs)
ASANFLAGS = -fsanitize=address -g
asan: fclean
	$(CXX) $(CXXFLAGS) $(ASANFLAGS) -o $(NAME) $(SRCS)

.PHONY: all clean fclean re asan
